{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@core/*": ["components/core/*"],
      "@pages/*": ["components/pages/*"],
      "@sections/*": ["components/sections/*"],
      "@components/core": ["components/core/index.ts"],
      "@components/pages": ["components/pages/index.ts"],
      "@components/sections": ["components/sections/index.ts"],
      "@components/shared": ["components/shared/index.ts"],
      "@domain/enums": ["domain/enums/index.ts"],
      "@domain/interfaces": ["domain/interfaces/index.ts"],
      "@domain/models": ["domain/models/index.ts"],
      "@utils/guards": ["utils/guards/index.ts"],
      "@utils/services": ["utils/services/index.ts"],
      "@utils/hooks": ["utils/hooks/index.ts"],
      "@utils/fn": ["utils/fn/index.ts"],
      "@domain": ["domain/index.ts"],
      "@store": ["store/index.ts"],
      "~/variables": ["scss/variables.scss"],
      "~/utilities": ["scss/utilities.scss"],
      "~/theme": ["scss/theme.scss"],
      "~/mixin": ["scss/mixin.scss"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
